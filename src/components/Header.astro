<style>
  /* Reset básico */
  * { margin: 0; padding: 0; box-sizing: border-box; }
  a { text-decoration: none; color: inherit; }

  body {
    font-family: sans-serif;
  }

  header {
    position: fixed;
    top: 0;
    width: 100%;
    height: 100px;
    background-color: rgba(255, 255, 255, 0.3);
    backdrop-filter: blur(10px);
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    z-index: 50;
    display: flex;
    justify-content: center;
    padding: 1rem;
  }

  .nav-container {
    width: 100%;
    max-width: 1200px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 1rem;
  }

  .logo img {
    height: 80px;
  }

  nav {
    display: none;
  }

  nav ul {
    display: flex;
    list-style: none;
    gap: 1.5rem;
    font-weight: bold;
    font-size: 1.1rem;
    color: #333;
    position: relative;
  }

  nav li {
    position: relative;
  }

  nav li:hover > ul {
    display: flex;
  }

  nav ul ul {
    display: none;
    flex-direction: column;
    position: absolute;
    top: 100%;
    left: 0;
    background-color: white;
    padding: 1rem;
    border-radius: 0.5rem;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    z-index: 999;
    width: 220px;
  }

  nav ul ul li {
    padding: 0.5rem 0;
  }

  nav a:hover {
    color: #2563eb; /* azul */
  }

  .menu-btn {
    font-size: 2rem;
    font-weight: bold;
    background: none;
    border: none;
    color: black;
    cursor: pointer;
    position: absolute;
    right: 1rem;
    top: 1rem;
    display: block;
  }

  /* MOBILE MENU */
  .mobile-menu {
    display: flex;
    flex-direction: column;
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    background-color: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    font-weight: 600;
    font-size: 1.125rem;
    padding: 1rem 1.5rem;
    gap: 1rem;
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease-in-out;
    z-index: 40;
  }

  .mobile-menu.show {
    max-height: 500px;
  }

  /* Desktop view */
  @media (min-width: 768px) {
    .menu-btn { display: none; }
    nav { display: block; }
    .mobile-menu { display: none; }
  }

  /* Carousel */
  #carousel {
    margin-top: 100px;
    position: relative;
    width: 100%;
    height: 600px;
    overflow: hidden;
  }

  #carousel-track {
    display: flex;
    width: 100%;
    height: 100%;
    transition: transform 0.5s ease-in-out;
  }

  #carousel-track > div {
    min-width: 100%;
    height: 100%;
    position: relative;
  }

  #carousel-track img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .carousel-caption {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
    background: rgba(0, 0, 0, 0.3);
    padding: 1rem;
  }

  .carousel-caption h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .carousel-caption p {
    font-size: 1.5rem;
    margin-bottom: 2rem;
  }

  .carousel-caption button {
    background-color: white;
    color: black;
    border: none;
    border-radius: 10px;
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
    cursor: pointer;
  }

  .carousel-caption button:hover {
    background-color: #e5e5e5;
  }

  #prev, #next {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    font-size: 2.5rem;
    color: white;
    cursor: pointer;
    z-index: 60;
  }

  #prev:hover, #next:hover {
    color: #ccc;
  }

  #prev { left: 1rem; }
  #next { right: 1rem; }
</style>
</head>
