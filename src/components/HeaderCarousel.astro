<style>
  /* Reset básico */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  a {
    text-decoration: none;
    color: inherit;
  }
  html,
  body {
    overflow-x: hidden;
    width: 100%;
  }
  body {
    overflow-x: hidden;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: "Comic Neue", cursive;
    font-weight: 700;
  }

  /* Carousel */
  #carousel {
    position: relative;
    width: 100%;
    height: 700px;
    overflow: hidden;
  }

  #carousel-track {
    display: flex;
    width: 100%;
    height: 100%;
    transition: transform 0.5s ease-in-out;
  }

  #carousel-track > div {
    min-width: 100%;
    height: 100%;
    position: relative;
  }

  #carousel-track img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: brightness(60%);
  }

  .carousel-caption {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 1rem;
    max-width: 90%;
    margin: 0 auto;
    word-wrap: break-word;
  }

  .carousel-caption h2 {
    width: 80%;
    font-size: 4.5rem;
    margin-bottom: 1rem;
  }

  .carousel-caption p {
    font-size: 2rem;
    margin-bottom: 2rem;
  }

  .carousel-caption button {
    background-color: var(--rojo-alegre);
    border: none;
    border-radius: 10px;
    padding: 0.75rem 1.5rem;
    font-size: 1.3rem;
    cursor: pointer;
    width: 300px;
  }

  .carousel-caption button:hover {
    background-color: #e5e5e5;
  }

  @media (max-width: 768px) {
    .carousel-caption h2 {
      font-size: 1.8rem;
    }
    .carousel-caption p {
      font-size: 1rem;
    }
    .carousel-caption button {
      width: 180px;
      font-size: 0.9rem;
    }
  }

  #prev,
  #next {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    font-size: 2.5rem;
    color: white;
    cursor: pointer;
    z-index: 60;
  }

  #prev:hover,
  #next:hover {
    color: #ccc;
  }

  #prev {
    left: 1rem;
  }
  #next {
    right: 1rem;
  }
</style>

<!-- Carrusel -->
