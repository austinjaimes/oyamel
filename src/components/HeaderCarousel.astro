  }

  .nav-container {
    width: 100%;
    max-width: 1200px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 1rem;
  }

  .logo img {
    height: 80px;
  }

  nav {
    display: none;
    margin-left: 8rem;
  }

  nav ul {
    display: flex;
    list-style: none;
    gap: 1.5rem;
    font-weight: bold;
    font-size: .7rem;
    position: relative;
  }

  nav li {
    position: relative;
  }

  nav li:hover > ul {
    display: flex;
  }

  nav ul ul {
    display: none;
    flex-direction: column;
    position: absolute;
    top: 100%;
    left: 0;
    background-color: var(--verde-apagado);
    padding: 1rem;
    border-radius: 0.5rem;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    z-index: 999;
    width: 220px;
  }

  nav ul ul li {
    padding: 0.5rem 0;
  }

  nav a:hover {
    color: #2563eb; /* azul */
  }

  .menu-btn {
    font-size: 2rem;
    font-weight: bold;
    background: none;
    border: none;
    cursor: pointer;
    position: absolute;
    right: 3.5rem;
  top: 1.5rem;
  z-index: 60;
    display: block;
  }

  /* MOBILE MENU */
  .mobile-menu {
    display: none;
    flex-direction: column;
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    height: auto;
    background-color: var(--verde-apagado);
    backdrop-filter: blur(10px);
    font-size: 1.125rem;
    padding: 1rem 1.5rem;
    gap: 1rem;
    max-height: 0;
    overflow-y: auto;
    transition: max-height 0.3s ease-in-out;
    z-index: 100;
  }

  .mobile-menu.show {
    display: flex;
    flex-direction: column;
    max-height: 500px;
  }
  @media (min-width: 768px) {
  nav {
    display: none;
    margin-left: 0; /* Esto evita que empuje los botones */
    gap: 1.25rem; /* antes era 2rem */
    font-size: 0.95rem; /* antes era 1.05rem */

  }

  nav ul {
    flex-wrap: wrap;
    gap: 2.5rem; /* un poco más cómodo */
  }
}
  /* Desktop view */
  @media (min-width: 1024px) {
    .menu-btn { display: none; }
    nav { display: block; }
    .mobile-menu { display: none; }
  }

  /* Carousel */
  #carousel {
    position: relative;
    width: 100%;
    height: 700px;
    overflow: hidden;
  }

  #carousel-track {
    display: flex;
    width: 100%;
    height: 100%;
    transition: transform 0.5s ease-in-out;
  }

  #carousel-track > div {
    min-width: 100%;
    height: 100%;
    position: relative;
  }

  #carousel-track img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: brightness(60%);
  }

  .carousel-caption {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 1rem;
    max-width: 90%;
    margin: 0 auto;
    word-wrap: break-word;
  }
  

  .carousel-caption h2 {
    width: 80%;
    font-size: 4.5rem;
    margin-bottom: 1rem;
  }

  .carousel-caption p {
    font-size: 2rem;
    margin-bottom: 2rem;
  }

  .carousel-caption button {
    background-color: var(--rojo-alegre);
    border: none;
    border-radius: 10px;
    padding: 0.75rem 1.5rem;
    font-size: 1.3rem;
    cursor: pointer;
    width: 300px;
  }

  .carousel-caption button:hover {
    background-color: #e5e5e5;
  }

  @media (max-width: 768px) {
.carousel-caption h2 {
  font-size: 1.8rem;
}
.carousel-caption p {
  font-size: 1rem;
}
.carousel-caption button {
  width: 180px;
  font-size: 0.9rem;
}
}

  #prev, #next {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    font-size: 2.5rem;
    color: white;
    cursor: pointer;
    z-index: 60;
  }

  #prev:hover, #next:hover {
    color: #ccc;
  }

  #prev { left: 1rem; }
  #next { right: 1rem; }
</style>

  
